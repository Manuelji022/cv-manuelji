---
import '@fontsource-variable/onest';
import { basics } from "@cv"

interface Props {
	title: string;
}

const { title } = Astro.props;

const { image, summary } = basics;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="description" content={summary} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href={image} />
		<link rel="prelead" as="image" href={image} />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Onest Variable',system-ui, sans-serif;
		scroll-behavior: smooth;
		background: #fff;
		letter-spacing: 0.025rem;
	}

	body {
		margin: 0;
		padding: 0;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
		text-wrap: balance;
	}

	p {
		margin: 0;
		text-wrap: pretty;
		font-size: 0.9rem;
		margin: 0;
		color: #333;
		line-height: 1.3rem;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}
</style>
