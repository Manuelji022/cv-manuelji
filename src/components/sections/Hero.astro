---
import { basics } from "@cv"
import Section from "@/components/Section.astro"
import LinkedIn from "@/icons/LinkedIn.astro"

const { name, label, image, location, profiles, email } = basics
const { currentcity, countryCode, originalcity, originalcountryCode } = location
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name }</h1>
            <h2>{label }</h2>
        </div>
        <figure>
            <img src={image } alt={name} />
        </figure>
    </div>

</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        background-color: #FFEA37;
        
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
        margin-left: 2rem;
        margin-bottom: 1rem;
    }

    h2 {
        font-size: 1rem;
        font-weight: 400;
        text-wrap: balance;
        margin-left: 2rem;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 200px;
        border-radius: 50%;
        border: 1px solid #000;
    }

    figure {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>