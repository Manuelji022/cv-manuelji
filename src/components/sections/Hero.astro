---
import { basics } from "@cv"
import Section from "@/components/Section.astro"
import LinkedIn from "@/icons/LinkedIn.astro"

const { name, label, image} = basics
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name }</h1>
            <h2>{label }</h2>
        </div>
        <figure>
            <img src={image } alt={name} />
        </figure>
    </div>

</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: #FFEA37;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 2rem;
    }

    h1 {
        font-size: 3rem;
        margin-top: 1rem;
        margin-left: 2rem;
    }

    h2 {
        font-size: 1rem;
        font-weight: 400;
        text-wrap: balance;
        margin-left: 2rem;
        margin-bottom: 1rem;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 100%;
        max-width: 300px;
        height: auto;
        border-radius: 50%;
        border: 1px solid #000;
    }

    figure {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    @media (width <= 700px) {
        .container {
            flex-direction: column-reverse;
        }
        .info{
            justify-content: center;
            align-items: center;
            padding-right: 0;
            text-align: center ;
        }

        figure {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 auto;
        }
        img {
            max-width: 180px;
        }

    }

</style>