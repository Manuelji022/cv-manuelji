---
import { education, cursos } from "@cv"
import Section from "@/components/Section.astro"
---

<Section title="EducaciÃ³n y Cursos">
    <ul>
        {
            cursos.map(
                ({ name, institution, duration, year, image }) => (
                    <li>
                        <article>
                            <img class="institutionlogo"
                            src={image}
                            alt={institution} />
                            <div>
                                <h3>{name}</h3>
                                <p>{institution}</p>
                            </div>
                                <time>{duration} - {year}</time>
                        </article>
                    </li>
                )
            )
        }
        {
            education.map(
                ({endDate, startDate, area, studyType, institution, image}) => (
                    <li>
                        <article>
                            <img class="institutionlogo"
                            src={image}
                            alt={institution} />
                            <div>
                                <h3>{studyType} en {area}</h3>
                                <p>{institution}</p>
                            </div>
                                <time>{startDate} - {endDate}</time>
                        </article>
                    </li>
                )
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        margin-top: 1rem;
    }
    article {
        display: flex;
        align-items: center;
    }
    
    h3 {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    time {
        color: #555;
        font-size: 0.9rem;
        margin-left: auto;
    }

    .institutionlogo {
        aspect-ratio: 1/1;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 1rem;
    }
</style>